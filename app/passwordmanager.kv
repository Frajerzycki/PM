#:kivy 1.11.1
<BackgroundColor@Widget>
  background_color: 1, 1, 1, 1
  canvas.before:
    Color:
      rgba: root.background_color
    Rectangle:
      size: self.size
      pos: self.pos
# Now you can simply Mix the `BackgroundColor` class with almost
# any other widget... to give it a background.
<BackgroundLabel@Label+BackgroundColor>
  background_color: 1, 1, 1, 1
  color: 0,0,0,1

<Login@Screen>:
  name: 'login'
  BoxLayout:
    orientation:'vertical'
    GridLayout:
      rows:2
      cols:2
      BackgroundLabel:
        text: 'Username:'
      TextInput:
      BackgroundLabel:   
        text: 'Password:'
      TextInput:
        password: True
    BoxLayout:
      orientation:'vertical'
      Button:
        background_normal: ''
        background_color: .235, .572, .909, 1
        text: 'Login'

      Button:
        text: "I haven't got an account yet."
        on_press:
          root.manager.current = 'register'

<Register@Screen>:
  name: 'register'
  BoxLayout:
    orientation:'vertical'
    GridLayout:
      rows:3
      cols:2
      BackgroundLabel:
        text: 'Username:'
      TextInput:
      BackgroundLabel:
        text: 'Password:'
      TextInput:
        password: True
      BackgroundLabel:
        text: 'Repeat password:'
      TextInput:
        password: True
    BoxLayout:
      orientation:'vertical'

      Button:
        background_normal: ''
        background_color: .235, .572, .909, 1
        text: 'Register'

      Button:
        text: 'I already have an account.'
        on_press:
          root.manager.current = 'login'

<Menu>:    
  Register:
  Login:
